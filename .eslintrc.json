{
    "extends": "eslint:recommended",
	"rules": {
		"indent": ["error", 4],
		"quotes": ["error", "double"],
		"max-len": ["error", 250],
		"curly": "error",
		"camelcase": ["error", {"properties": "never"}],
		"no-trailing-spaces": ["error", {"ignoreComments": false }],
        "no-irregular-whitespace": ["error"],
        "no-console": "off",
        "no-unused-vars": ["error", { "args": "none" }]
    },
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	}
}
